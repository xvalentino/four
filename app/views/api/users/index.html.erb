<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Password</th>
      <th>Email</th>
      <th>Bio</th>
      <th>Image path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td><%= user.bio %></td>
        <td><%= user.image_path %></td>
        <td><%= link_to 'Show', api_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_api_user_path(user) %></td>
        <td><%= link_to 'Destroy', api_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_api_user_path %>
